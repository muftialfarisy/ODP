<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:theme="@style/AppTheme.NoActionBar"
    android:id="@+id/drawer">
    <include
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        layout="@layout/app_toolbar"/>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationview"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header"
        android:fitsSystemWindows="true"
        android:layout_gravity="start" />
    <View
        android:id="@+id/fabBGLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/jdl_ckp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laporan Masalah"
            android:gravity="center"
            android:layout_marginTop="@dimen/_55sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/deviceid"
            android:layout_below="@+id/jdl_ckp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_below="@+id/deviceid"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deviceid">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                    android:id="@+id/rv_reportm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_25sdp">

                </com.cooltechworks.views.shimmer.ShimmerRecyclerView>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/ln_fab3"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_234sdp"
            android:layout_marginTop="@dimen/_380sdp"
            android:visibility="gone"
            android:clipToPadding="false">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab3"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/_15sdp"
                android:backgroundTint="#62F852"
                app:borderWidth="@dimen/_2sdp"
                android:src="@drawable/ic_thermometer"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_fab2"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_marginLeft="@dimen/_235sdp"
            android:layout_marginTop="@dimen/_450sdp"
            android:visibility="gone"
            android:clipToPadding="false">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab2"
                android:layout_width="58dp"
                android:layout_height="77dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/_15sdp"
                android:backgroundTint="#62F852"
                app:borderWidth="@dimen/_2sdp"
                android:src="@drawable/ic_problem" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_500sdp"
            android:layout_marginLeft="@dimen/_250sdp"
            android:visibility="gone"
            android:clipToPadding="false">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab1"
                android:layout_width="58dp"
                android:layout_height="77dp"
                android:layout_gravity="bottom|end"
                android:backgroundTint="#62F852"
                app:borderWidth="@dimen/_2sdp"
                android:src="@drawable/ic_health_report" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_550sdp"
            android:layout_marginLeft="@dimen/_250sdp"
            >
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:borderWidth="@dimen/_2sdp"
                android:backgroundTint="#62F852"
                android:src="@drawable/ic_add"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
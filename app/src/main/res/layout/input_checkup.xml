                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/txt_kadar_puasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="                                              "
                android:textColor="#000000"/>
